<div class="author">
  <h1 class="author__heading">Hi , I'm Abood</h1>
  <p class="author__body">Web developer and student</p>
</div>

<img
  src="/imgs/hero-image.webp"
  alt="person looking out through winde "
  class="hero-image"
  width="981"
  height="528"
/>

<section class="articles">
  <h2 class="articles__heading">Latest POsts</h2>
  <ul class="article-ul">
    <% if (posts.length >0) { %> <% posts.forEach(post => { %>

    <li>
      <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="article-list__date"><%= post.createdAt.toDateString() %> </span>
      </a>
    </li>
    <% }) %> <% } %>
  </ul>
  <% if (nextPage !== null) { %>
   
    <a href="/?page=<%= nextPage %>" class="pagination"> &lt; View Older Posts</a>
  <% } %>
</section>
